
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= 'Sr.No.'%></th>
      <th><%= :Username %></th>
      <th><%= :Password %></th>
      <th><%= :Isadmin %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each_with_index do |user,index| %>
      <tr>
        <td><%=  index+1 %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.isadmin %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' ,:remote => true%>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' ,:remote => true %>
                  <%= link_to "Ingredient" ,user_ingredients_path(user),:class =>"btn btn-primary btn-xs" ,:type => "button" %>
                 
                   <%= link_to "Recipe" , user_recipes_path(user),:class =>"btn btn-primary btn-xs" ,:type => "button" %>
                 
        </td>
        <td>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
